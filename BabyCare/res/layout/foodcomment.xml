<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2" >

    <RelativeLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffb34b" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="建议"
            android:textColor="#ffffff"
            android:textSize="18dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/gardenfood_back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/back_seletor" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/gardenfood_back"
            android:text="食谱"
            android:textColor="#ffffff"
            android:textSize="18dp" />
    </RelativeLayout>
    
    <Button
        android:id="@+id/foodcomment_bt"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:background="@null"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:text="快来说两句吧"
        android:textColor="#ffb34b"
        android:textSize="16dp" />

    <ListView
        android:id="@+id/foodcomment_list"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/top_layout"
        android:layout_above="@+id/foodcomment_bt"
        android:cacheColorHint="#00000000"
        android:divider="@drawable/listline" />


</RelativeLayout>