<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_bookshelf" >

    <TextView
        android:id="@+id/list_in_journal_centerblank"
        android:layout_width="1.0dip"
        android:layout_height="1.0dip"
        android:layout_centerInParent="true" />

    <RelativeLayout
        android:id="@+id/list_in_journal_layout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/list_in_journal_centerblank" >

        <ImageView
            android:id="@+id/list_in_journal_img1"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10.0dip" />

        <TextView
            android:id="@+id/list_in_journal_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/list_in_journal_img1"
            android:layout_alignRight="@id/list_in_journal_img1"
            android:layout_alignBottom="@id/list_in_journal_img1"
            android:layout_centerHorizontal="true"
            android:background="@drawable/list_in_journal_textbg"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="15.0dip" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/list_in_journal_layout2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/list_in_journal_centerblank" >

        <ImageView
            android:id="@+id/list_in_journal_img2"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10.0dip" />

        <TextView
            android:id="@+id/list_in_journal_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/list_in_journal_img2"
            android:layout_alignRight="@+id/list_in_journal_img2"
            android:layout_alignBottom="@+id/list_in_journal_img2"
            android:layout_centerHorizontal="true"
            android:background="@drawable/list_in_journal_textbg"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="15.0dip" />
    </RelativeLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="5.0dip"
        android:layout_below="@+id/list_in_journal_layout1" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="5.0dip"
        android:layout_below="@+id/list_in_journal_layout2" />

</RelativeLayout>